<%- include('partials/header') %>

<div class="container">
  <h1 class="text-center mt-5" style="color: #da2e2e;"><strong>HistÃ³rico de Testes</strong></h1>
  <hr>

  <div class="list-group">
    <% if (testes.length === 0) { %>
      <p class="text-center">Nenhum teste realizado ainda.</p>
    <% } else { %>
      <% testes.forEach(teste => { %>
        <a href="/detalhes/<%= teste.id %>" class="list-group-item list-group-item-action">
          Teste ID: <%= teste.id %> - Frase: <%= teste.conteudo %> - Data: <%= teste.data.toLocaleDateString() %>
        </a>
      <% }); %>
    <% } %>
  </div>
</div>

